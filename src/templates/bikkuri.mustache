    "editorBracketPairGuide.background5":     null,
    "editorBracketPairGuide.background6":     null,



    /* Diff Editor
       https://code.visualstudio.com/api/references/theme-color#diff-editor-colors
    */
    "diffEditor.diagonalFill":                 "{{ surface.sunken }}",
    "diffEditor.insertedTextBackground":       "{{ ui.success.dim }}{{ opacity.low }}",
    "diffEditor.removedTextBackground":        "{{ ui.danger.dim }}{{ opacity.low }}",
