    "sideBarSectionHeader.background": "{{ surface.sunken }}",
    "sideBar.border":                  "{{ border.dim }}",
    "sideBar.dropBackground":          "{{ tint.60 }}{{ opacity.low }}",
    "sideBar.foreground":              "{{ text.mid }}",
    "sideBarSectionHeader.foreground": "{{ text.mid }}",
    "sideBarTitle.foreground":         "{{ text.mid }}",
    "sideBarSectionHeader.border":     null,

    /* Git Decorations
       Changed files in sidebar or tabs;
    */

    "gitDecoration.conflictingResourceForeground": "{{ ui.accent2.dim }}",
    "gitDecoration.deletedResourceForeground":     "{{ ui.danger.dim }}",
    "gitDecoration.ignoredResourceForeground":     "{{ text.disabled }}",
    "gitDecoration.modifiedResourceForeground":    "{{ ui.warning.dim }}",
    "gitDecoration.untrackedResourceForeground":   "{{ ui.success.dim }}",

    /* SCM (Source Control Management)
       Stats in Incoming/Outgoing part in Source Control
    */
    
    "scm.historyItemAdditionsForeground": "{{ ui.success.base }}",
    "scm.historyItemDeletionsForeground": "{{ ui.danger.base }}",
    "scm.historyItemStatisticsBorder": "{{ border.none }}",
    "scm.historyItemSelectedStatisticsBorder": "{{ border.none }}",





    /* Minimap & Overview ruler
       https://code.visualstudio.com/api/references/theme-color#minimap
    */
    "minimap.errorHighlight":               "{{ ui.danger.dim }}",
    "minimap.findMatchHighlight":           "{{ ui.warning.dim }}",
    // "minimap.foregroundOpacity":            "#000000c0",
    "minimap.selectionHighlight":           "{{ surface.raised-high }}",
    "minimap.selectionOccurrenceHighlight": "{{ surface.raised-high }}",
    "minimap.warningHighlight":             "{{ ui.warning.dim }}",
    "minimapGutter.addedBackground":        "{{ ui.success.dim }}",
    "minimapGutter.deletedBackground":      "{{ ui.danger.dim }}",
    "minimapGutter.modifiedBackground":     "{{ ui.warning.dim }}",
    "minimapSlider.background":             "{{ tint.60 }}{{ opacity.med }}",
    "minimapSlider.activeBackground":       "{{ tint.50 }}{{ opacity.med }}",
    "minimapSlider.hoverBackground":        "{{ tint.50 }}{{ opacity.med }}",

    "editorOverviewRuler.border":                        "{{ surface.base }}",
    "editorOverviewRuler.addedForeground":               "{{ ui.success.dim }}{{ opacity.med }}",
    "editorOverviewRuler.bracketMatchForeground":        "{{ tint.60 }}",
    "editorOverviewRuler.deletedForeground":             "{{ ui.danger.dim }}{{ opacity.med }}",
    "editorOverviewRuler.errorForeground":               "{{ ui.danger.dim }}",
    "editorOverviewRuler.findMatchForeground":           "{{ ui.warning.dim }}",
    "editorOverviewRuler.infoForeground":                "{{ ui.info.dim }}",
    "editorOverviewRuler.modifiedForeground":            "{{ ui.warning.dim }}",
    "editorOverviewRuler.rangeHighlightForeground":      "{{ ui.accent1.dim }}",
    "editorOverviewRuler.selectionHighlightForeground":  "{{ tint.60 }}",
    "editorOverviewRuler.warningForeground":             "{{ ui.warning.dim }}",
    "editorOverviewRuler.wordHighlightForeground":       "{{ tint.60 }}",
    "editorOverviewRuler.wordHighlightStrongForeground": "{{ tint.60 }}",
    //editorOverviewRuler for merge conflicts is located with merge conflicts
  
    

    /* Status bar
       https://code.visualstudio.com/api/references/theme-color#status-bar-colors
    */
