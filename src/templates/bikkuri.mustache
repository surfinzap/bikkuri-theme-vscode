{
  "$schema": "vscode://schemas/color-theme",
  "name": "Bikkuri ({{ mode-name }} {{ tint-name }} & {{ mood-name }})",
  "type": "{{ mode-type }}",
  "colors": { 
    /* Base colors
     https://code.visualstudio.com/api/references/theme-color#status-bar-colors
    */
    // focusBorder has a very wide scope
    "focusBorder":                            "{{ border.mid }}",
    "foreground":                             "{{ text.base }}",
    "widget.shadow":                          "{{ shadow }}",
    // text selections for input fields or text areas, does not apply to selections within the editor and the terminal
    "selection.background":                   "{{ surface.raised-high }}",
    "descriptionForeground":                  "{{ text.base }}",
    "errorForeground":                        "{{ ui.danger.base }}",
    "icon.foreground":                        "{{ icon.mid }}",
    "sash.hoverBorder":                       "{{ border.base }}",
    "textLink.foreground":                    "{{ ui.accent1.base }}",
    "textLink.activeForeground":              "{{ ui.accent1.dim }}",
    "debugToolBar.background":                "{{ surface.base }}",

    /* Button 
       https://code.visualstudio.com/api/references/theme-color#button-control
    */
    "button.background":                      "{{ tint.40 }}",
    "button.foreground":                      "{{ tint.90 }}",
    "button.hoverBackground":                 "{{ tint.50 }}",
    "button.secondaryBackground":             "{{ tint.80 }}",
    "button.secondaryForeground":             "{{ text.base }}",
    "button.secondaryHoverBackground":        "{{ tint.80 }}",
    "button.border":                          "{{ border.none }}",
    "checkbox.background":                    "{{ surface.base }}",
    "checkbox.foreground":                    "{{ icon.base }}",
    "checkbox.border":                        "{{ tint.60 }}",


    /* Dropdown
       https://code.visualstudio.com/api/references/theme-color#dropdown-control
    */
    "dropdown.background":                    "{{ surface.sunken }}", 
    "dropdown.border":                        "{{ border.dim }}",
    "dropdown.foreground":                    "{{ text.base }}",
    "dropdown.listBackground":                "{{ surface.sunken }}",


    /* Input
       https://code.visualstudio.com/api/references/theme-color#input-control 
    */  
    "input.background":                       "{{ surface.sunken }}",
    "input.border":                           "{{ border.dim }}",
    "input.foreground":                       "{{ text.base }}",
    "input.placeholderForeground":            "{{ text.dim }}",
    "inputOption.activeBackground":           "{{ tint.40 }}",
    "inputOption.hoverBackground":            "{{ surface.raised-med }}",  
    "inputOption.activeForeground":           "{{ surface.sunken }}",
    // Border color of activated options in input fields.
    "inputOption.activeBorder":               "{{ border.none }}", //cannot be null
    "inputValidation.errorBackground":        "{{ surface.sunken }}",
    "inputValidation.errorBorder":            "{{ ui.danger.base }}",
    "inputValidation.infoBackground":         "{{ surface.sunken }}",
    "inputValidation.infoBorder":             "{{ border.base }}",
    "inputValidation.warningBackground":      "{{ surface.sunken }}",
    "inputValidation.warningBorder":          "{{ ui.warning.base }}",

    /* Scrollbar
    */
    "scrollbar.shadow":                        "{{ shadow }}",
    "scrollbarSlider.background":              "{{ surface.raised-low }}",
    "scrollbarSlider.activeBackground":        "{{ surface.raised-med }}",
    "scrollbarSlider.hoverBackground":         "{{ surface.raised-med }}",


    /* Badge
    */
    "badge.background":                       "{{ tint.40 }}",
    "badge.foreground":                       "{{ tint.90 }}",

    /* Progress bar
    */
    "progressBar.background":                 "{{ ui.accent3.base }}",

    /* Title Bar
    */
    "titleBar.activeBackground":              "{{ surface.base }}",
    "titleBar.activeForeground":              "{{ tint.50 }}",
    "titleBar.inactiveBackground":            "{{ surface.base }}",
    "titleBar.inactiveForeground":            "{{ tint.50 }}",
    "titleBar.border" :                       "{{ border.dim }}",

    /* Breadcrumbs
    */    
    "breadcrumb.foreground":                    "{{ tint.60 }}",
    "breadcrumb.background":                    "{{ surface.base }}",
    "breadcrumb.focusForeground":               "{{ text.base }}",
    "breadcrumb.activeSelectionForeground":     "{{ text.base }}",
    "breadcrumbPicker.background":              "{{ surface.base }}",

    
    /* Lists & Trees
       https://code.visualstudio.com/api/references/theme-color#lists-and-trees
    */
    "list.activeSelectionBackground":   "{{ surface.raised-low }}",
    "list.activeSelectionForeground":   "{{ text.base }}",
    "list.errorForeground":             "{{ ui.danger.base }}",
    "list.focusBackground":             "{{ surface.raised-med }}",
    "list.focusForeground":             "{{ text.base }}",

    // list.hoverBackground/Foreground has a broad impact: Sidebar items hover, Quick Input items hover, Notifications hover; but not for the menu
    "list.hoverBackground":             "{{ surface.raised-low }}",
    "list.hoverForeground":             "{{ text.base }}",

    "list.inactiveSelectionBackground": "{{ surface.raised-low }}",
    "list.inactiveSelectionForeground": "{{ text.base }}",
    "list.warningForeground":           "{{ ui.warning.base }}",
    "list.deemphasizedForeground":      "{{ tint.60 }}",
    "list.dropBackground":              "{{ surface.raised-low }}",
    "list.filterMatchBackground":       "{{ surface.raised-high }}",
    "list.focusHighlightForeground":    "{{ ui.accent1.base }}",
    "list.focusOutline":                null,
    "list.highlightForeground":         "{{ ui.accent1.base }}",
    "list.invalidItemForeground":       "{{ ui.danger.dim }}",
    //"list.activeSelectionIconForeground": null,
    //"list.filterMatchBorder": null,
    //"list.inactiveFocusBackground": null,
    //"list.inactiveFocusOutline": null,
    //"list.inactiveSelectionIconForeground": null,



    /* Quick input (Command palette, Quick picker)
    */
    "quickInput.background":              "{{ surface.sunken }}",
    "quickInput.foreground":              "{{ text.mid }}",
    "pickerGroup.foreground":             "{{ text.mid }}",
    "pickerGroup.border":                 "{{ border.dim }}",
    "quickInputTitle.background":         "{{ surface.base}}",
    "quickInputList.focusBackground":     "{{ tint.80 }}",
    "quickInputList.focusForeground":     "{{ text.base }}",
    "quickInputList.focusIconForeground": "{{ tint.50 }}",
    
    



    /* Keybinding labels
       https://code.visualstudio.com/api/references/theme-color#keybinding-label-colors
    */
    "keybindingLabel.background":   "{{ surface.base }}",
    "keybindingLabel.border":       "{{ surface.sunken }}",
    "keybindingLabel.bottomBorder": "{{ border.dim }}",
    "keybindingLabel.foreground":   "{{ text.mid }}",

    /* Activity Bar 
    */
    "activityBar.background":         "{{ surface.base }}",
    "activityBar.dropBorder":         "{{ border.base }}",
    "activityBar.foreground":         "{{ text.base }}",
    "activityBar.inactiveForeground": "{{ icon.dim }}", //icon colors
    "activityBar.border":             "{{ border.dim }}",
    "activityBarBadge.background":    "{{ tint.40 }}",
    "activityBarBadge.foreground":    "{{ tint.90 }}",
    "activityBar.activeBorder":       "{{ border.base }}",
    "activityBar.activeBackground":   "{{ tint.80 }}",
    "activityBar.activeFocusBorder":  null,
    "profileBadge.background" :       "{{ tint.80 }}",
    "profileBadge.foreground":        "{{ icon.base }}",


    /* Sidebar
       https://code.visualstudio.com/api/references/theme-color#side-bar
    */
