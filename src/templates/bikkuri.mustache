    "diffEditorOverview.removedForeground":    "{{ ui.danger.dim }}{{ opacity.med-low }}",
    
    
    /* Merge conflicts, Merge editor
     */
    "merge.border":                                        null,
    "merge.currentHeaderBackground":                       "{{ ui.accent2.dim }}{{ opacity.med-low }}",
    "merge.currentContentBackground":                      "{{ ui.accent2.dim }}{{ opacity.low }}",
