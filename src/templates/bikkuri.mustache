    "editorOverviewRuler.commonContentForeground":         null,
    "mergeEditor.change.background":                       "{{ surface.base }}",
    "mergeEditor.change.word.background":                  "{{ surface.sunken }}",
    "mergeEditor.conflict.unhandledUnfocused.border":      "{{ ui.danger.base }}",
