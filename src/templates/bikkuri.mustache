    "mergeEditor.conflict.handledFocused.border":          "{{ ui.success.base }}",
    "mergeEditor.conflict.unhandled.minimapOverViewRuler": "{{ ui.danger.base }}",
    "mergeEditor.conflict.handled.minimapOverViewRuler":   "{{ ui.success.base }}",
