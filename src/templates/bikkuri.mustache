    "statusBar.foreground":                   "{{ tint.50 }}",
    "statusBar.border":                       "{{ border.dim }}",
    "statusBar.debuggingBackground":          "{{ ui.accent2.dim }}",
    "statusBar.debuggingForeground":          "{{ text.on-color }}",
    "statusBar.debuggingBorder":              "{{ border.dim }}",
    "statusBar.noFolderBackground":           "{{ surface.base }}",
    "statusBar.noFolderBorder":               "{{ border.dim }}",
    "statusBarItem.activeBackground":         "{{ surface.raised-low }}",
    "statusBarItem.hoverBackground":          "{{ surface.raised-med }}",
    "statusBarItem.prominentForeground":      "{{ text.on-color }}",
    "statusBarItem.prominentBackground":      "{{ ui.accent2.dim }}",
    "statusBarItem.prominentHoverBackground": "{{ ui.accent2.base }}",
    "statusBarItem.remoteBackground":         "{{ surface.sunken }}",
    "statusBarItem.remoteForeground":         "{{ tint.50 }}",
    "statusBarItem.errorBackground":          "{{ ui.danger.base }}",
    "statusBarItem.errorForeground":          "{{ text.on-color }}",
    "statusBarItem.warningBackground":        "{{ ui.warning.base }}",
    "statusBarItem.warningForeground":        "{{ text.on-color }}",
    "statusBarItem.compactHoverBackground":   "{{ tint.80 }}",
    "statusBarItem.focusBorder":              "{{ border.dim }}",
    "statusBar.focusBorder":                  "{{ border.dim }}",




    /* Editor Groups & Tabs
       https://code.visualstudio.com/api/references/theme-color#editor-groups-tabs
    */
    "editorGroup.emptyBackground":        "{{ surface.base }}",
    "editorGroupHeader.noTabsBackground": "{{ surface.base }}",
    "editorGroupHeader.tabsBackground":   "{{ surface.base }}",
    "editorGroup.dropBackground":         "{{ surface.raised-low }}",
    "editorGroup.border":                 "{{ border.dim }}",
    "editorGroupHeader.tabsBorder":       "{{ border.dim }}",
    "editorGroup.focusedEmptyBorder":     "{{ border.mid }}",

    "editorGroup.dropIntoPromptForeground": "{{ tint.50 }}",
    "editorGroup.dropIntoPromptBackground": "{{ surface.sunken }}",
    "editorGroup.dropIntoPromptBorder":     "{{ border.dim }}",

    "tab.activeBackground":                "{{ surface.raised-low }}",
    "tab.activeForeground":                "{{ text.base }}",
    "tab.activeBorder":                    "{{ border.base }}",
    "tab.activeBorderTop":                 "{{ border.none }}",
    "tab.inactiveForeground":              "{{ text.dim }}",
    "tab.inactiveBackground":              "{{ surface.base }}",
    "tab.hoverBorder":                     "{{ border.mid }}",
    "tab.hoverBackground":                 "{{ surface.raised-med }}",
    "tab.hoverForeground":                 "{{ text.mid }}",
    "tab.border":                          "{{ border.none }}",
    "tab.unfocusedActiveBackground":       "{{ surface.raised-low }}",
    "tab.unfocusedActiveForeground":       "{{ text.dim }}",
    "tab.unfocusedActiveBorder":           "{{ border.mid }}",
    "tab.unfocusedInactiveForeground":     "{{ text.disabled }}",
    "tab.unfocusedInactiveBackground":     "{{ surface.base }}",
    "tab.unfocusedActiveBorderTop":        "{{ border.none }}",
    "tab.unfocusedHoverBackground":        "{{ surface.raised-med }}",
    "tab.unfocusedHoverForeground":        "{{ text.mid }}",
    "tab.unfocusedHoverBorder":            "{{ border.mid }}",
    "tab.lastPinnedBorder":                "{{ border.mid }}",
    "tab.activeModifiedBorder":            "{{ border.none }}",
    "tab.inactiveModifiedBorder":          "{{ border.none }}",
    "tab.unfocusedActiveModifiedBorder":   "{{ border.none }}",
    "tab.unfocusedInactiveModifiedBorder": "{{ border.none }}",

    
    /* Panels
       e.g. Output, Debug Console, Terminal 
    */
    
    "panel.background":              "{{ surface.base }}",
    "panel.border":                  "{{ border.dim }}",
    "panel.dropBorder":              "{{ border.mid }}",
    "panelTitle.activeBorder":       "{{ border.base }}",
    "panelTitle.activeForeground":   "{{ text.base }}",
    "panelTitle.inactiveForeground": "{{ tint.50 }}",
    "panelInput.border":             "{{ border.mid }}",
    "panelSection.border":           "{{ border.dim }}",
    "panelSection.dropBackground":   "{{ surface.raised-low }}",
    "panelSectionHeader.background": "{{ surface.base }}",
    "panelSectionHeader.foreground": "{{ text.base }}",
    "panelSectionHeader.border":     "{{ border.dim }}",


    /* Editor


       Sidenotes
       editorInfo.foreground is also used as icon color in "Do you trust..." dialog
       editorWarning.foreground is used for warning squiggles. Also used as warning color by Github Co-pilot VS Code plugin.
       
    */
    "editor.background":              "{{ surface.base }}",
    "editor.foreground":              "{{ text.base }}",
    "editorLineNumber.foreground":    "{{ text.disabled }}",
    "editorLink.activeForeground":    "{{ text.base }}",
    "editor.lineHighlightBackground": "{{ surface.sunken }}",
    "editor.lineHighlightBorder":     null,
    "editor.selectionBackground":     "{{ tint.80 }}",
    // selectionForeground does not seem to work
    // "editor.selectionForeground":             "{{ undefined }}",
    "editor.inactiveSelectionBackground":     "{{ surface.sunken }}",
    // same content as selection
    "editor.selectionHighlightBackground":    "{{ surface.none }}",
    "editor.selectionHighlightBorder":        "{{ ui.accent1.base }}",
    // current match
    "editor.findMatchBackground":             "{{ surface.none }}",
    "editor.findMatchBorder":                 "{{ ui.accent3.base }}",
    // other matches
    "editor.findMatchHighlightBackground":    "{{ surface.none }}",
    "editor.findMatchHighlightBorder":        "{{ ui.accent2.base }}",
    // selection range when "Find in Selection" is applied
    "editor.findRangeHighlightBackground":    "{{ surface.sunken}}", 
    "editor.findRangeHighlightBorder":        null,
    //background selection on hover
    "editor.hoverHighlightBackground":        "{{ tint.80 }}",
    // highlighting variables 
    "editor.wordHighlightStrongBackground":   "{{ surface.none }}",
    "editor.wordHighlightStrongBorder":       "{{ ui.accent1.base }}",
    "editor.wordHighlightBackground":         "{{ surface.none }}",
    "editor.wordHighlightBorder":             "{{ ui.accent2.base }}",
    "editor.wordHighlightTextBackground":     null,
    "editor.wordHighlightTextBorder":         null,
    
    "editorUnicodeHighlight.border":          "{{ border.dim }}",
    "editorUnicodeHighlight.background":      "{{ surface.base }}",

    "editorWhitespace.foreground":         "{{ text.disabled }}",
    "editorCursor.foreground":             "{{ text.mid }}",
    "editorError.foreground":              "{{ ui.danger.dim }}",
    "editorWarning.foreground":            "{{ ui.warning.dim }}",
    "editorHint.foreground":               "{{ ui.success.dim }}",
    "editorInfo.foreground":               "{{ ui.info.dim }}",
    "editorGutter.addedBackground":        "{{ ui.success.base }}",
    "editorGutter.deletedBackground":      "{{ ui.danger.base }}",
    "editorGutter.modifiedBackground":     "{{ ui.warning.base }}",
    "editorIndentGuide.background1":       "{{ border.dim }}{{ opacity.med }}",
    "editorIndentGuide.activeBackground1": "{{ border.mid }}",
    "editorRuler.foreground":              "{{ text.disabled }}",
    "editorCodeLens.foreground":           "{{ tint.50 }}{{ opacity.med }}",
    "editorHoverWidget.background":        "{{ surface.base }}",
    "editorHoverWidget.border":            "{{ border.dim }}",

    "editorStickyScroll.background":      "{{ surface.base }}",
    "editorStickyScrollHover.background": "{{ tint.80 }}",
    

    
